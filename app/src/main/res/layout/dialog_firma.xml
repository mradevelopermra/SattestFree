<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_popup"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

   <LinearLayout
       android:padding="5dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/textView14"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="35dp"
           android:text="Notes"
           android:visibility="visible"
           android:textAlignment="center"
           android:textColor="@color/colormonto"
           android:textSize="28sp"
           android:textStyle="bold" />


       <android.gesture.GestureOverlayView
           android:id="@+id/gesturesFirma"
           android:layout_width="match_parent"
           android:layout_height="450dp"
           android:fadeEnabled="false"
           android:fadeOffset="10000"
           android:gestureColor="#000000"
           android:gestureStrokeWidth="5"
           android:gestureStrokeType="multiple"
           android:uncertainGestureColor="#000000"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent" />

       <LinearLayout
           android:orientation="horizontal"
           android:layout_gravity="center"
           android:visibility="visible"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">


           <com.github.clans.fab.FloatingActionButton
               android:layout_gravity="center"
               android:id="@+id/btnClearNotas"
               app:fab_colorPressed="@color/white"
               app:backgroundTint="@color/gray_cuentas"
               app:fab_colorNormal="@color/white"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_clear_all_black_24dp"
               />


           <com.github.clans.fab.FloatingActionButton
               android:layout_gravity="end"
               android:id="@+id/btnCloseNotas"
               app:fab_colorPressed="@color/white"
               app:backgroundTint="@color/gray_cuentas"
               app:fab_colorNormal="@color/white"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_close_black_24dp"

               />

       </LinearLayout>

