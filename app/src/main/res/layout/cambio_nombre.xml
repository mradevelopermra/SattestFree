<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/nombre_popup"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/idtipo2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorletra"
        android:text="@string/EcambioImage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/constipospinermov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EtuNombre"
        android:layout_marginTop="10dp"
        android:textColor="@color/colormonto"
        android:layout_below="@+id/idtipo2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/escribeNombre"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/constipospinermov"
        android:ems="10"
     >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnGuardaImagenBillete"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/colormonto"
        android:text="Guardar"
        android:textAllCaps="false"
        android:layout_below="@+id/btnSeleccina"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btnCerrarBillete"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:background="@color/colormonto"
        android:text="Close"
        android:textAllCaps="false"
        android:layout_below="@+id/btnGuardaImagenBillete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewBilletePup"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/escribeNombre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EseleccionaImagen"
        android:id="@+id/btnSeleccina"
        android:layout_below="@+id/imageViewBilletePup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@color/colormonto"
        android:layout_alignRight="@+id/btnGuardaImagenBillete"
        android:layout_alignEnd="@+id/btnGuardaImagenBillete" />


</RelativeLayout>
