<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="@string/instruccionesInvader"
        android:textColor="@color/colormonto"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/infofinal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/comprafull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@color/colormonto"
        android:text="Obtener Versión Premium"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/closepago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comprafull"
        android:layout_alignStart="@+id/comprafull"
        android:layout_alignLeft="@+id/comprafull"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colormonto"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/yalocompre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closepago"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-110dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colormonto"
        android:visibility="gone"
        android:text="¡Ya lo compré!"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</RelativeLayout>