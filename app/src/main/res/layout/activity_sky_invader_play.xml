<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkyInvaderPlay">

    <include
        android:id="@+id/frame_encabezado"
        android:layout_width="0dp"
        android:layout_height="66dp"
        layout="@layout/layout_encabezado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp" />


    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/frame_encabezado"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">


            <TextView
                android:id="@+id/txtDuraion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="10dp"
                android:background="@color/dorado"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/preguntaImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:gravity="clip_horizontal"
                android:inputType="textMultiLine|textNoSuggestions"
                android:text="Pregunta"
                android:textColor="@color/gray_cuentas"
                android:textSize="20sp"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView4" />

            <EditText
                android:id="@+id/pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:background="@mipmap/pizzarra_ahorcado"
                android:ems="10"
                android:gravity="clip_horizontal"
                android:inputType="textMultiLine|textNoSuggestions"
                android:text="Pregunta"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="80dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/preguntaImagen"
                tools:layout_editor_absoluteX="6dp" />

            <TextView
                android:id="@+id/respCollapsable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:text=""
                android:textAlignment="center"
                android:drawableRight="@drawable/minus"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/respUno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Respuesta Uno"
                        android:textColor="@color/turquesa"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp"
                        tools:layout_editor_absoluteX="26dp"
                        tools:layout_editor_absoluteY="379dp" />

                    <TextView
                        android:id="@+id/respDos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Respuesta Dos"
                        android:textColor="@color/turquesa"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp"
                        tools:layout_editor_absoluteX="26dp"
                        tools:layout_editor_absoluteY="379dp" />

                    <TextView
                        android:id="@+id/respTres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Respuesta Tres"
                        android:textColor="@color/turquesa"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp"
                        tools:layout_editor_absoluteX="26dp"
                        tools:layout_editor_absoluteY="379dp" />

                    <TextView
                        android:id="@+id/respCuatro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Respuesta Cuatro"
                        android:textColor="@color/turquesa"
                        android:textSize="20sp"
                        android:layout_marginTop="8dp"
                        tools:layout_editor_absoluteX="26dp"
                        tools:layout_editor_absoluteY="379dp" />

                    <RadioGroup
                        android:id="@+id/radioRespuestas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/frame_encabezado">

                        <RadioButton
                            android:id="@+id/r1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Respuesta Uno"
                            android:visibility="gone"
                            android:enabled="false"
                            android:textColor="@color/turquesa"
                            android:clickable="false"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/r2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:text="Respuesta Dos"
                            android:visibility="gone"
                            android:enabled="false"
                            android:textColor="@color/turquesa"
                            android:clickable="false"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/r3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            android:text="Respuesta Tres"
                            android:enabled="false"
                            android:textColor="@color/turquesa"
                            android:clickable="false"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/r4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            android:text="Respuesta Cuatro"
                            android:enabled="false"
                            android:textColor="@color/turquesa"
                            android:clickable="false"
                            android:textSize="20sp" />
                    </RadioGroup>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.github.clans.fab.FloatingActionButton
                    android:layout_gravity="center"
                    android:id="@+id/btnAyuda"
                    app:fab_colorPressed="@color/white"
                    app:backgroundTint="@color/gray_cuentas"
                    app:fab_colorNormal="@color/white"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_live_help_black_24dp"
                    />


                <com.github.clans.fab.FloatingActionButton
                    android:layout_gravity="center"
                    android:id="@+id/btnNotas"
                    app:fab_colorPressed="@color/white"
                    app:backgroundTint="@color/gray_cuentas"
                    app:fab_colorNormal="@color/white"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    />


                <com.github.clans.fab.FloatingActionButton
                    android:layout_gravity="end"
                    android:id="@+id/btnCalculadora"
                    app:fab_colorPressed="@color/white"
                    app:backgroundTint="@color/gray_cuentas"
                    app:fab_colorNormal="@color/white"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_functions_black_24dp"

                    />

                <com.github.clans.fab.FloatingActionButton
                    android:layout_gravity="end"
                    android:id="@+id/btnContinuar"
                    app:fab_colorPressed="@color/white"
                    app:backgroundTint="@color/gray_cuentas"
                    app:fab_colorNormal="@color/white"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_redo_black_24dp"

                    />

            </LinearLayout>

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/turquesa"
                android:visibility="gone"
                android:text="Validar"
                android:textAlignment="center"
                android:textColor="@color/white" />


            <LinearLayout
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:background="@mipmap/fondoedificio"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pregunta"
                tools:context=".SkyInvaderPlay"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="0dp">



            </LinearLayout>



            <!--<com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewSky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="10dp"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>-->



        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tituloSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Respuesta Invaders"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/frame_encabezado"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/frame_encabezado"
        app:layout_constraintTop_toTopOf="parent" />

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>